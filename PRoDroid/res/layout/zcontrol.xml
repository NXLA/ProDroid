<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlzcontrol"
    android:layout_width="match_parent"
    android:layout_height="150dip"
    android:textAlignment="center"
     >

    <ImageButton
        android:id="@+id/btn_z_home"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_z_down"
        android:layout_alignRight="@+id/btn_z_down"
        android:layout_centerVertical="true"
        android:src="@drawable/home_z"
        android:text="Home" />

    <Button
        android:id="@+id/btn_z_down"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_z_home"
        android:layout_centerHorizontal="true"
        android:text="-Z" />

    <Button
        android:id="@+id/btn_z_up"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_z_home"
        android:layout_centerHorizontal="true"
        android:text="+Z" />

</RelativeLayout>
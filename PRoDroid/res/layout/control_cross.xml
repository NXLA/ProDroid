<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlControl_cross"
    android:layout_width="150dip"
    android:layout_height="150dip"
        android:layout_alignLeft="@+id/buttoncard"
        android:layout_below="@+id/buttoncard"
 
    android:textAlignment="center" >

    <Button
        android:id="@+id/btn_switch_distance"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="10" />

    <Button
        android:id="@+id/btn_y_down"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_switch_distance"
        android:layout_centerHorizontal="true"
        android:text="-Y" />

    <Button
        android:id="@+id/btn_y_up"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_switch_distance"
        android:layout_centerHorizontal="true" 
        android:text="+Y" />

    <Button
        android:id="@+id/btn_x_down"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_switch_distance"
        android:text="-X" />

    <Button
        android:id="@+id/btn_x_up"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_switch_distance"
        android:text="+X" />
        

</RelativeLayout>